{
  "name": "ai-twitter-agent",
  "version": "1.0.0",
  "description": "AI-powered Twitter agent that analyzes and generates tweets",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "nodemon --exec node --loader ts-node/esm src/index.ts",
    "test": "node --loader ts-node/esm src/test-login.ts",
    "watch": "tsc -w",
    "monitor": "node --loader ts-node/esm src/like-monitor.ts"
  },
  "dependencies": {
    "@types/node-schedule": "^2.1.0",
    "dotenv": "^16.3.1",
    "langchain": "^0.0.200",
    "node-schedule": "^2.1.1",
    "openai": "^4.0.0",
    "agent-twitter-client": "elizaOS/agent-twitter-client"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  }
}
